{
  "name": "mu-platform",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --watch --webpack",
    "build:prod": "yarn run gen:grpc && nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "gen:grpc:client": "export DIR=$(node -e \"console.log(process.cwd())\") && docker run -v $DIR/apps/mu-platform/src:/defs namely/protoc-all:1.22_0 -d . -l $GLANG",
    "gen:grpc:web": "export GLANG=web && npm run gen:grpc:client && cp -r apps/mu-platform/src/gen/pb-web/* api-projects/js",
    "gen:grpc:php": "export GLANG=php && npm run gen:grpc:client",
    "gen:grpc:java": "export GLANG=java && npm run gen:grpc:client",
    "gen:grpc:python": "export GLANG=python && npm run gen:grpc:client",
    "gen:grpc:node": "export GLANG=node && npm run gen:grpc:client",
    "start:dev": "nest start --watch",
    "start:debug": "nest start mu-platform --debug --watch",
    "start:prod": "node dist/apps/mu-platform/main",
    "gen:grpc": "cd ./apps/mu-platform/src/ && protoc --plugin=../../../node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=. ./services.api.proto",
    "gen:win:grpc": "cd ./apps/mu-platform/src/ && protoc --plugin=../../../node_modules/.bin/protoc-gen-ts_proto.cmd --ts_proto_out=. ./services.api.proto",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/mu-platform/test/jest-e2e.json"
  },
  "dependencies": {
    "@google/maps": "^1.0.2",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.1.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/platform-socket.io": "^7.4.4",
    "@nestjs/schedule": "^0.4.0",
    "@nestjs/schematics": "^6.9.3",
    "@nestjs/typeorm": "^7.1.4",
    "@nestjs/websockets": "^7.4.4",
    "@types/cron": "^1.7.2",
    "@types/google__maps": "^0.5.14",
    "axios": "^0.20.0",
    "circular-json": "^0.5.9",
    "get-port": "^5.1.1",
    "grpc": "^1.24.2",
    "influx": "^5.6.3",
    "knex": "^0.20.13",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "rethinkdb-ts": "^2.4.5",
    "rimraf": "^3.0.0",
    "rxjs": "^6.6.3",
    "source-map-support": "^0.5.16",
    "typeorm": "^0.2.28",
    "unleash-client": "^3.3.6",
    "uuid": "^7.0.3",
    "winston": "^3.3.3",
    "xmlbuilder2": "^2.4.0"
  },
  "devDependencies": {
    "@grpc/proto-loader": "^0.5.5",
    "@nestjs/cli": "^6.14.1",
    "@nestjs/microservices": "^7.4.4",
    "@nestjs/schematics": "^6.9.3",
    "@nestjs/testing": "^7.4.4",
    "@schematics/angular": "^8.3.29",
    "@types/express": "^4.17.8",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.13.27",
    "@types/socket.io": "^2.1.11",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^7.0.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "protobufjs": "^6.10.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "ts-proto": "^1.38.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "@app/commos/(.*)": "<rootDir>/libs/commos/src/$1",
      "@app/commos": "<rootDir>/libs/commos/src",
      "@app/commons/(.*)": "<rootDir>/libs/commons/src/$1",
      "@app/commons": "<rootDir>/libs/commons/src",
      "@mu/mu-common/(.*)": "<rootDir>/libs/mu-common/src/$1",
      "@mu/mu-common": "<rootDir>/libs/mu-common/src"
    }
  }
}
